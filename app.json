{
  "expo": {
    "name": "Where I Paused",
    "slug": "where-i-paused",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/presentation/assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cardoso.where-i-paused"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/presentation/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.cardoso.whereipaused"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/presentation/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/presentation/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
