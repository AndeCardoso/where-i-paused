{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@data/*": [
        "./data/*"
      ],
      "@domain/*": [
        "./domain/*"
      ],
      "@infra/*": [
        "./infra/*"
      ],
      "@app/*": [
        "./presentation/app/*"
      ],
      "@assets/*": [
        "./presentation/assets/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
